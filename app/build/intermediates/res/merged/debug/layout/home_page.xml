<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundForOtherActivites"
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
         android:layout_marginLeft="@dimen/activity_horizontal_margin"
         android:layout_marginTop="10dp"
         android:weightSum="1">

         <android.support.constraint.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_weight="0.20">

             <ImageButton
                 android:id="@+id/AddTemplate"
                 android:background="@color/windowBackground"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@mipmap/ic_add_circle_black_24dp"
                 android:layout_marginStart="8dp"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 tools:layout_editor_absoluteY="32dp" />

             <TextView
                 android:textColor="@color/textColorOnGreyBackground"
                 android:textSize="16sp"
                 android:fontFamily="sans-serif"
                 android:background="@color/backgroundForHomePage"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:text="Generate Bill"
                 android:id="@+id/textView15"
                 android:layout_marginRight="8dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintBottom_toBottomOf="@+id/AddTemplate"
                 android:layout_marginStart="8dp"
                 android:layout_marginEnd="8dp"
                 android:layout_marginBottom="4dp"
                 app:layout_constraintLeft_toRightOf="@+id/AddTemplate"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintHorizontal_bias="0.0" />

             <ImageButton
                 android:id="@+id/but2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@color/windowBackground"
                 android:src="@mipmap/ic_add_circle_black_24dp"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 android:layout_marginStart="8dp"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toBottomOf="@+id/AddTemplate" />

             <TextView
                 android:id="@+id/textView16"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:background="@color/backgroundForHomePage"
                 android:fontFamily="sans-serif"
                 android:text="List of Clients"
                 android:textColor="@color/textColorOnGreyBackground"
                 android:textSize="16sp"
                 android:layout_marginRight="8dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintLeft_toRightOf="@+id/but2"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintBottom_toBottomOf="@+id/but2"
                 android:layout_marginStart="8dp"
                 android:layout_marginEnd="8dp"
                 android:layout_marginBottom="4dp"
                 app:layout_constraintHorizontal_bias="0.0" />

             <ImageButton
                 android:id="@+id/but3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@color/windowBackground"
                 android:src="@mipmap/ic_add_circle_black_24dp"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toBottomOf="@+id/but2"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 android:layout_marginStart="8dp" />

             <TextView
                 android:id="@+id/textView17"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:fontFamily="sans-serif"
                 android:text="View Services and Charges"
                 android:background="@color/backgroundForHomePage"
                 android:textColor="@color/textColorOnGreyBackground"
                 android:textSize="16sp"
                 android:layout_marginRight="8dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintLeft_toRightOf="@+id/but3"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintHorizontal_bias="0.0"
                 app:layout_constraintBottom_toBottomOf="@+id/but3"
                 android:layout_marginStart="8dp"
                 android:layout_marginEnd="8dp"
                 android:layout_marginBottom="4dp" />

             <ImageButton
                 android:id="@+id/but4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@color/windowBackground"
                 android:src="@mipmap/ic_add_circle_black_24dp"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toBottomOf="@+id/but3"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 android:layout_marginStart="8dp" />

             <TextView
                 android:id="@+id/textView18"
                 android:layout_width="0dp"
                 android:background="@color/backgroundForHomePage"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="8dp"
                 android:layout_marginRight="8dp"
                 android:fontFamily="sans-serif"
                 android:text="List of Bills"
                 android:textColor="@color/textColorOnGreyBackground"
                 android:textSize="16sp"
                 app:layout_constraintBottom_toBottomOf="@+id/but4"
                 app:layout_constraintLeft_toRightOf="@+id/but4"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintHorizontal_bias="0.0"
                 android:layout_marginStart="8dp"
                 android:layout_marginEnd="8dp"
                 android:layout_marginBottom="4dp" />

             <ImageButton
                 android:id="@+id/but5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@color/windowBackground"
                 android:src="@mipmap/ic_add_circle_black_24dp"
                 android:layout_marginStart="8dp"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toBottomOf="@+id/but4"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintLeft_toLeftOf="parent" />

             <TextView
                 android:id="@+id/textView19"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:fontFamily="sans-serif"
                 android:text="Create and view sub-users"
                 android:background="@color/backgroundForHomePage"
                 android:textColor="@color/textColorOnGreyBackground"
                 android:textSize="16sp"
                 android:layout_marginRight="8dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintLeft_toRightOf="@+id/but5"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintBottom_toBottomOf="@+id/but5"
                 android:layout_marginStart="8dp"
                 android:layout_marginEnd="8dp"
                 android:layout_marginBottom="4dp"
                 app:layout_constraintHorizontal_bias="0.0" />

             <ImageButton
                 android:id="@+id/but6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_weight="0.20"
                 android:background="@color/windowBackground"
                 android:src="@mipmap/ic_add_circle_black_24dp"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toBottomOf="@+id/but5"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 android:layout_marginStart="8dp" />

             <TextView
                 android:id="@+id/textView20"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:fontFamily="sans-serif"
                 android:text="Company Policies"
                 android:background="@color/backgroundForHomePage"
                 android:textColor="@color/textColorOnGreyBackground"
                 android:textSize="16sp"
                 android:layout_marginRight="8dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintLeft_toRightOf="@+id/but6"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintBottom_toBottomOf="@+id/but6"
                 android:layout_marginStart="8dp"
                 android:layout_marginEnd="8dp"
                 app:layout_constraintHorizontal_bias="0.0"
                 android:layout_marginBottom="4dp" />

             <ImageButton
                 android:id="@+id/but7"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@color/windowBackground"
                 android:src="@mipmap/ic_add_circle_black_24dp"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toBottomOf="@+id/but6"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 android:layout_marginStart="8dp" />

             <TextView
                 android:id="@+id/textView21"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="0.20"
                 android:fontFamily="sans-serif"
                 android:text="Templates"
                 android:textColor="@color/textColorOnGreyBackground"
                 android:background="@color/backgroundForHomePage"
                 android:textSize="16sp"
                 android:layout_marginRight="8dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintLeft_toRightOf="@+id/but7"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintBottom_toBottomOf="@+id/but7"
                 android:layout_marginBottom="4dp"
                 app:layout_constraintHorizontal_bias="0.0"
                 android:layout_marginStart="8dp"
                 android:layout_marginEnd="8dp" />

             <android.support.design.widget.NavigationView
                 android:id="@+id/navigation_view"
                 android:layout_width="wrap_content"
                 android:layout_height="107dp"
                 android:layout_gravity="start"
                 app:headerLayout="@layout/navigation_layout"
                 app:menu="@menu/main"
                 app:layout_constraintTop_toTopOf="parent"
                 android:layout_marginTop="8dp"
                 android:layout_marginLeft="8dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 android:layout_marginRight="8dp"
                 app:layout_constraintRight_toRightOf="parent"></android.support.design.widget.NavigationView>

         </android.support.constraint.ConstraintLayout>

     </LinearLayout>
</android.support.v4.widget.DrawerLayout>


